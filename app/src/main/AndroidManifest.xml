<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pietroorlandi.socialnetwork_entertainment">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_social_entertainment"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_social_entertainment_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <activity
            android:name=".gui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.SignUpActivity">
        </activity>
        <activity android:name=".gui.PlatformActivity">
        </activity>
        <activity android:name=".gui.WriteReviewActivity">
        </activity>
        <activity android:name=".gui.ProfileActivity"
            android:parentActivityName=".gui.PlatformActivity">
        </activity>
        <activity android:name=".gui.InfoEntertainmentActivity">
        </activity>
    </application>

</manifest>